<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_3sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <TextView
            android:id="@+id/tvSettingTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivSettingsArrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Change Password"
            android:fontFamily="@font/nunitosans_regular"
            android:textSize="@dimen/_14sdp"
            android:gravity="start|center"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/ivSettingsArrow"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvSettingTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/drawable_arrow_right"
            android:layout_marginEnd="@dimen/_10sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>