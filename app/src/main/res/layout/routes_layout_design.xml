<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivRoutesRvDesign"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/path_18854"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRoutesRvDesign"
        app:layout_constraintEnd_toStartOf="@+id/tvRoutesRvDesign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRoutesRvDesign" />

    <TextView
        android:id="@+id/tvRoutesRvDesign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:layout_marginVertical="@dimen/_10sdp"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Active for 15 min For One Person From Bismaya to Baghdad Mohamed al kasim Way 5000 Dinar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivRoutesRvDesign"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>